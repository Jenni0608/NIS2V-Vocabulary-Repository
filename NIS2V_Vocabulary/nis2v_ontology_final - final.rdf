<!-- http://JP_ontology.org/iso27001/ControlOfDocumentedInformation -->

<rdf:Description rdf:about="http://JP_ontology.org/iso27001/ControlOfDocumentedInformation">
    <rdf:type rdf:resource="http://www.w3.org/2000/01/rdf-schema#Class"/>
    <rdf:type rdf:resource="http://www.w3.org/2004/02/skos/core#Concept"/>
    <rdfs:subClassOf rdf:resource="http://JP_ontology.org/nis2v/Article_21.2a"/>
